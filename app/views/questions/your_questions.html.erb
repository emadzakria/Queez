<div class="page-header">
    <h1>All Your Ques</h1>
 </div>

<% @questions.each do |ques| %>
<div class="row">
<div class="span8">
  <div class="well">
  	<%= ques.content %>
  	<hr>
  	<%= link_to time_ago_in_words(ques.created_at), question_path(ques) %> ago
  	| <%= link_to "Edit", edit_question_path(ques) %> |
      <%= link_to "delete", ques, method: :delete, data: { confirm: "Are you sure?" }  %>
  </div>
  </div>
  </div>
<% end %>
<%= will_paginate %>
